// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Morpheus",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "runArgs": [
        "--runtime=nvidia",
        "--gpus",
        "all"
    ],

    "containerEnv": {
        "MORPHEUS_ROOT": "/workspaces/morpheus"
    },

    "initializeCommand": [
        "mkdir", "-p", "${localWorkspaceFolder}/.devcontainer/.conda"
    ],

    "mounts": [
        {"type":"bind", "source": "${localWorkspaceFolder}/.devcontainer/.conda", "target": "/home/coder/.conda"}
    ]
}

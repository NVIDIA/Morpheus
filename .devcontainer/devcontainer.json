// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Morpheus",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "runArgs": [
        "--runtime=nvidia",
        "--gpus",
        "all"
    ],

    "containerEnv": {
        "MORPHEUS_ROOT": "/workspaces/morpheus"
    },

    "initializeCommand": [
        "mkdir", "-p", "${localWorkspaceFolder}/.devcontainer/.conda"
    ],

    "mounts": [
        {"type":"bind", "source": "${localWorkspaceFolder}/.devcontainer/.conda", "target": "/home/coder/.conda"}
    ],

    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cpptools",
                "nvidia.nsight-vscode-edition",
                "twxs.cmake",
                "xaver.clang-format"
            ]
        }
    },
    "settings": {
	    "C_Cpp.intelliSenseEngine": "disabled"
    }
}
